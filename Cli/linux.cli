  output = ""

[[snippets]]
  description = "Create Physical Volume (PV)."
  command = "pvcreate /dev/xvdc1"
  output = ""

[[snippets]]
  description = "Create Volume Group (VG)."
  command = "vgcreate testvg /dev/xvdc1 /dev/xvdd1"
  output = ""

[[snippets]]
  description = "Create Logical Volumes (LV)."
  command = "lvcreate -n lv_data1 --size 12G testvg"
  output = ""

[[snippets]]
  description = "Format the Logical Volums (LVâ€™s) to ext4 format."
  command = "mkfs.ext4 /dev/testvg/lv_data1"
  output = ""

[[snippets]]
  description = "Finally, mount the file system."
  command = "mount /dev/testvg/lv_data1 /data1"
  output = ""

